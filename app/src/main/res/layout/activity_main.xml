<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeper.MainActivity">

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/row_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Foxes"
                android:textColor="@color/quatchi_brown"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_vs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="vs"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Wolves"
                android:textColor="@color/quatchi_brown"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/scoreFoxes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="56sp" />

            <TextView
                android:id="@+id/text_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="score"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scoreWolves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="56sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/button_default" />

        <LinearLayout
            android:id="@+id/row_corsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/corsiFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fenwickFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sevenFactorFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="na"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_metrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="Corsi/Fenwick/7Factor"
                android:textAlignment="center"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/corsiWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fenwickWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sevenFactorWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="na"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/button_default" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/score_board">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:fontFamily="sans-serif-medium"
                        android:onClick="fiveOnFiveGoal"
                        android:tag="foxes"
                        android:text="5:5 goal"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:fontFamily="sans-serif-medium"
                        android:onClick="otherGoal"
                        android:tag="foxes"
                        android:text="other goal"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="shotBlocked"
                        android:tag="foxes"
                        android:text="shot blocked"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="shotOnPost"
                        android:tag="foxes"
                        android:text="shot on post"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="otherShotAttempt"
                        android:tag="foxes"
                        android:text="other attempt"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="takeaway"
                        android:tag="foxes"
                        android:text="takeaway"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="completedPass"
                        android:tag="foxes"
                        android:text="completed pass"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="finishedCheck"
                        android:tag="foxes"
                        android:text="finished check"
                        android:textColor="@color/quatchi_brown_light" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_default" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="fiveOnFiveGoal"
                        android:tag="wolves"
                        android:text="5:5 goal"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="otherGoal"
                        android:tag="wolves"
                        android:text="other goal"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="shotBlocked"
                        android:tag="wolves"
                        android:text="shot blocked"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="shotOnPost"
                        android:tag="wolves"
                        android:text="shot on post"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="otherShotAttempt"
                        android:tag="wolves"
                        android:text="other attempt"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="takeaway"
                        android:tag="wolves"
                        android:text="takeaway"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="completedPass"
                        android:tag="wolves"
                        android:text="completed pass"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/button_background"
                        android:onClick="finishedCheck"
                        android:tag="wolves"
                        android:text="finished check"
                        android:textColor="@color/quatchi_brown_light" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>