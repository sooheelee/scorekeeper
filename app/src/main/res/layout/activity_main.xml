<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeper.MainActivity">

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layoutMargin"
        android:layout_marginRight="@dimen/layoutMargin"
        android:layout_marginTop="@dimen/layoutMargin"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layoutMargin"
            android:layout_marginRight="@dimen/layoutMargin"
            android:layout_marginTop="@dimen/layoutMargin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardColumnWeight"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/teamA"
                android:textColor="@color/quatchi_brown"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/text_vs"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="vs"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="@dimen/smallText" />

            <TextView
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardColumnWeight"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/teamB"
                android:textColor="@color/quatchi_brown"
                android:textSize="@dimen/largeText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layoutMargin"
            android:layout_marginLeft="@dimen/layoutMargin"
            android:layout_marginRight="@dimen/layoutMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreFoxes"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardColumnWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/giganticText" />

            <TextView
                android:id="@+id/text_score"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="score"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/scoreWolves"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardColumnWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/giganticText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:layout_marginLeft="@dimen/layoutMargin"
            android:layout_marginRight="@dimen/layoutMargin"
            android:background="@color/button_default" />

        <LinearLayout
            android:id="@+id/row_corsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layoutMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/corsiFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />

            <TextView
                android:id="@+id/fenwickFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />

            <TextView
                android:id="@+id/sevenFactorFoxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/na"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />

            <TextView
                android:id="@+id/text_metrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="Corsi/Fenwick/7Factor"
                android:textAlignment="center"
                android:textColor="@color/quatchi_brown_light"
                android:textSize="@dimen/smallText" />

            <TextView
                android:id="@+id/corsiWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />

            <TextView
                android:id="@+id/fenwickWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />

            <TextView
                android:id="@+id/sevenFactorWolves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/scoreBoardLabelWeight"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/na"
                android:textColor="@color/quatchi_brown_dark"
                android:textSize="@dimen/mediumText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:layout_marginLeft="@dimen/layoutMargin"
            android:layout_marginRight="@dimen/layoutMargin"
            android:background="@color/button_default" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/score_board">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/layoutMargin"
                    android:layout_marginTop="@dimen/buttonMargin"
                    android:layout_weight="@integer/buttonColumnWeight"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:fontFamily="sans-serif-medium"
                        android:onClick="fiveOnFiveGoal"
                        android:tag="foxes"
                        android:text="@string/button1"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:fontFamily="sans-serif-medium"
                        android:onClick="otherGoal"
                        android:tag="foxes"
                        android:text="@string/button2"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="shotBlocked"
                        android:tag="foxes"
                        android:text="@string/button3"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="shotOnPost"
                        android:tag="foxes"
                        android:text="@string/button4"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="otherShotAttempt"
                        android:tag="foxes"
                        android:text="@string/button5"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="takeaway"
                        android:tag="foxes"
                        android:text="@string/button6"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="completedPass"
                        android:tag="foxes"
                        android:text="@string/button7"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="finishedCheck"
                        android:tag="foxes"
                        android:text="@string/button8"
                        android:textColor="@color/quatchi_brown_light" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/lineWidth"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/buttonMargin"
                    android:layout_marginTop="@dimen/layoutMargin"
                    android:background="@color/button_default" />

                <LinearLayout
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/layoutMargin"
                    android:layout_marginTop="@dimen/buttonMargin"
                    android:layout_weight="@integer/buttonColumnWeight"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="fiveOnFiveGoal"
                        android:tag="wolves"
                        android:text="@string/button1"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="otherGoal"
                        android:tag="wolves"
                        android:text="@string/button2"
                        android:textColor="@color/quatchi_brown_dark" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="shotBlocked"
                        android:tag="wolves"
                        android:text="@string/button3"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="shotOnPost"
                        android:tag="wolves"
                        android:text="@string/button4"
                        android:textColor="@color/quatchi_brown" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="otherShotAttempt"
                        android:tag="wolves"
                        android:text="@string/button5"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="takeaway"
                        android:tag="wolves"
                        android:text="@string/button6"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="completedPass"
                        android:tag="wolves"
                        android:text="@string/button7"
                        android:textColor="@color/quatchi_brown_light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/buttonMargin"
                        android:layout_marginLeft="@dimen/buttonMargin"
                        android:layout_marginRight="@dimen/buttonMargin"
                        android:background="@drawable/button_background"
                        android:onClick="finishedCheck"
                        android:tag="wolves"
                        android:text="@string/button8"
                        android:textColor="@color/quatchi_brown_light" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>